## SETTINGS ##
# Mod key is set as Super, change 4 to 1 to make it alt
set $mod Mod4
set $term alacritty
#Mouse+$mod drags floating windows
floating_modifier $mod
gaps inner 0
smart_gaps on

## CALLING PROGRAMS ##
bindsym $mod+Return exec $term #Terminal
bindsym $mod+Ctrl+m exec "$term -e 'pulsemixer'"
bindsym $mod+r exec "$term -e 'intrpn'"
bindsym $mod+d exec rofi -show run #Program Launcher
bindsym $mod+q kill 
bindsym $mod+w exec "i3-msg workspace 10; discord"
bindsym $mod+n border toggle
bindsym $mod+Shift+a move scratchpad
bindsym $mod+a scratchpad show
bindsym $mod+Shift+n exec ~/.scripts/ocr.sh
bindsym $mod+x exec ~/.scripts/powermenu.sh #Power Menu
bindsym $mod+m exec ~/.scripts/musicchange.sh #Music Player
bindsym $mod+Ctrl+n exec ~/colorPick.sh
bindsym $mod+Shift+t exec ~/clipInsert.sh
bindsym $mod+b exec "bluetoothctl power on && bluetoothctl devices | rofi -dmenu -p 'Bluetooth Devices' | cut -d ' ' -f 2 | xargs -I % bluetoothctl connect %"
bindsym $mod+z --release exec --no-startup-id maim -usB -f png | xclip -se c -t image/png
bindsym $mod+t --release exec notify-send "`date +%A\ %B\ %d\ %r`" "`cal`"
bindsym $mod+Shift+r restart
bindsym $mod+Shift+d --release exec "killall dunst"

## WINDOWS ##
# Borders
default_border none
new_float normal
hide_edge_borders both
# Position
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# Orientation
bindsym $mod+semicolon split toggle
# Size
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Ctrl+Shift+Left resize shrink width 15 px or 15 ppt
bindsym $mod+Ctrl+Shift+Down resize grow height 15 px or 15 ppt
bindsym $mod+Ctrl+Shift+Up resize shrink height 15 px or 15 ppt
bindsym $mod+Ctrl+Shift+Right resize grow width 15 px or 15 ppt
bindsym $mod+minus gaps inner all minus 5
bindsym $mod+plus gaps inner all plus 5
# Misc
workspace_auto_back_and_forth yes

## APPEARANCE ##
# Color
# class					border  bground text   indicator child_border
client.focused			#FFFFFF #000000 #FFFFFF #000000 #FFFFFF
client.focused_inactive	#FFFFFF #000000 #FFFFFF #000000 #FFFFFF
client.unfocused		#FFFFFF #000000 #FFFFFF #000000 #FFFFFF
client.urgent			#FFFFFF #000000 #FFFFFF #000000 #FFFFFF
client.placeholder		#FFFFFF #000000 #FFFFFF #000000 #FFFFFF
client.background		#000000
# Font
font pango: Iosevka 14px


## WORKSPACES ##
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10


## SYSTEM STARTUP ##
# Sound
exec --no-startup-id pulseaudio --start
exec --no-startup-id mpd
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev 
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
# Applications
exec_always --no-startup-id nitrogen --restore
exec_always --no-startup-id picom
exec --no-startup-id xset r rate 300 50
exec --no-startup-id xfce4-power-manager
exec_always --no-startup-id ~/.config/polybar/launch.sh
