# Mod key is set as Super, change 4 to 1 to make it alt
set $mod Mod4
#Mouse+$mod drags floating windows
floating_modifier $mod


## PROGRAM USAGE BINDS ##
bindsym $mod+Return exec st #Terminal
bindsym $mod+q kill 
bindsym $mod+Ctrl+m exec st -e 'pulsemixer' #Audio Settings
bindsym $mod+w exec firefox #Browser
bindsym $mod+n border none
bindsym $mod+Shift+a move scratchpad
bindsym $mod+a scratchpad show
bindsym $mod+Shift+n exec /home/atomic/.scripts/ocr.sh
bindsym $mod+Insert exec "xclip -o -se c > /tmp/clipboard; exec notify-send 'saved to /tmp/clipboard'"
bindsym $mod+b exec "bluetoothctl devices | rofi -dmenu -p 'Bluetooth Deviced' | cut -d ' ' -f 2 | xargs -I % bluetoothctl connect %"

## ROFI SCRIPTS
bindsym $mod+d exec rofi -show run #Program Launcher
bindsym $mod+x exec /home/atomic/.scripts/powermenu.sh #Power Menu
bindsym $mod+m exec /home/atomic/.scripts/musicchange.sh #Music Player
bindsym $mod+Shift+m exec /home/atomic/.scripts/mount.sh # Mounting Script



## PROGRAM MANAGEMENT ##
bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart dunst'"
bindsym $mod+Shift+z exec --no-startup-id maim -kB -f png | xclip -se c -t image/png
bindsym $mod+z --release exec --no-startup-id maim -skB -f png | xclip -se c -t image/png
bindsym $mod+t --release exec notify-send "`date +%A\ %B\ %d\ %r`"



## WINDOWS ##
# Borders
default_border none
new_float normal
hide_edge_borders both
font xft:URWGothic-Book 11
# Moving
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Ctrl+Shift+h move left
bindsym $mod+Ctrl+Shift+j move down
bindsym $mod+Ctrl+Shift+k move up
bindsym $mod+Ctrl+Shift+l move right
# Orientation
bindsym $mod+Shift+semicolon split h;exec notify-send 'tile horizontally'
bindsym $mod+semicolon split v;exec notify-send 'tile vertically'
# Resizing?
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+y resize shrink width 5 px or 5 ppt
bindsym $mod+Shift+u resize grow height 5 px or 5 ppt
bindsym $mod+Shift+i resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+o resize grow width 5 px or 5 ppt
bindsym $mod+minus gaps inner all minus 5
bindsym $mod+plus gaps inner all plus 5


## COMPENSATION ##
# Cursor
bindsym $mod+Shift+h exec xdotool mousemove_relative -- -25 +0
bindsym $mod+Shift+j exec xdotool mousemove_relative -- +0 +25
bindsym $mod+Shift+k exec xdotool mousemove_relative -- +0 -25
bindsym $mod+Shift+l exec xdotool mousemove_relative -- +25 -0
bindsym $mod+bracketleft exec xdotool mousedown 1
bindsym $mod+bracketright exec xdotool mouseup 1
bindsym $mod+Shift+bracketleft exec xdotool mousedown 3
bindsym $mod+Shift+bracketlight exec xdotool mouseup 3
bindsym $mod+backslash exec xdotool click 1
bindsym $mod+Shift+backslash exec xdotool click 3
# Keys
bindsym $mod+y exec xdotool key Left
bindsym $mod+u exec xdotool key Down
bindsym $mod+i exec xdotool key Up
bindsym $mod+o exec xdotool key Right


## WORKSPACES ##
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


## SYSTEM STARTUP ##
# Sound
exec --no-startup-id pulseaudio
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev 
bindsym $mod+comma exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+period exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
# Applications
exec --no-startup-i /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id nitrogen --restore; sleep 1
exec_always --no-startup-id compton -b -f -m=0.25 --config=/home/atomic/.config/compton/config
exec --no-startup-id xfce4-power-manager
exec --no-startup-id mpd
exec_always --no-startup-id ff-theme-util
exec_always --no-startup-id fix-xcursor
exec_always --no-startup-id /home/atomic/.config/polybar/launch.sh


## SYSTEM MANAGEMENT ##
bindsym $mod+Shift+r restart


## SYSTEM SETTINGS ##
gaps inner 0
smart_gaps on
