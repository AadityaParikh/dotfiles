# See: /usr/share/doc/mpd/mpdconf.example

pid_file "/home/atomic/music/mpd/mpd.pid"
db_file "/home/atomic/music/mpd/mpd.db"
state_file "/home/atomic/music/mpd/mpdstate"
playlist_directory "/home/atomic/music/mpd/playlists"
music_directory "/home/atomic/music"
metadata_to_use "artist,album,title"

audio_output {
	type "jack"
	name "My JACK Output"
}

audio_output {
    type                    "fifo"
    name                    "FIFO Output"
    path                    "/tmp/mpd.fifo"
    format                  "44100:16:2"
}
